###############################

state=""
fn_format_template() {
  state="$1"
  if [ "$state" = 'one' ]; then
      printf "{out_mem}\n"
  else
      printf "{out_network} {out_openvpn} ^ca(1, echo one) ^ca() mem {out_mem} {out_cpu_bars} Out {out_cava_out} ^fg(<FG>)In {out_cava_in} ^fg(<FG>){out_time} \n"
  fi

}
